<UserControl x:Class="MixerChatApp.Core.Views.BouyomiSetting"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:prism="http://prismlibrary.com/"             
             prism:ViewModelLocator.AutoWireViewModel="True">
    <Grid>
        <StackPanel>
            <CheckBox Content="棒読みちゃんに送る" IsChecked="{Binding IsSending}" />
            <DockPanel>
                <Label Content="棒読みちゃんのポート(デフォルトは50001)" />
                <TextBox Text="{Binding Port}" />
            </DockPanel>
            <DockPanel>
                <Label Content="棒読みちゃんのアドレス(デフォルトは127.0.0.1)" />
                <TextBox Text="{Binding Host}" />
            </DockPanel>
        </StackPanel>
    </Grid>
</UserControl>
