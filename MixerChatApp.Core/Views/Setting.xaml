<UserControl x:Class="MixerChatApp.Core.Views.Setting"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:prism="http://prismlibrary.com/"             
             prism:ViewModelLocator.AutoWireViewModel="True"
             Width="400">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Margin="10">
            <CheckBox Content="棒読みちゃんに送る" IsChecked="{Binding IsSending}" />
            <DockPanel Margin="10">
                <Button Content="連携コード生成" Command="{Binding CreateTokensCommand}" />
                <TextBox IsReadOnly="True" Text="{Binding Code}" />
            </DockPanel>
        </StackPanel>
        <Button Margin="5" Grid.Row="1" Content="適用" Command="{Binding ApplyCommand}" />
    </Grid>
</UserControl>
